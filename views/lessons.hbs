<form class="d-flex" method="POST" action="/home" novalidate>
    <button class="btn btn-primary align-self-center" type="submit">Back</button>
  </form>

{{#each rows}}

<button class="accordion">Lesson Number {{id_lesson}}: Chapter: {{chapter}}</button>
<div class="panel">
    <div class="container d-flex justify-content-center mt-50 mb-50">
        <div class="row">
            <div class="col-md-12 text-right mb-3">
                <button class="btn btn-primary" id="download" style="font-size: 2.5rem;"> download pdf</button>
            </div>
            <div class="col-md-12">
                <div class="card" id="invoice">
                    <div class="card-header bg-transparent header-elements-inline">
                        <h6 class="card-title text-primary">Class Information</h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="mb-4 pull-left">


                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="mb-4 ">
                                    <div class="text-sm-right">
                                        <h4 class="invoice-color mb-2 mt-md-2">Lesson Number {{id_lesson}}</h4>
                                        <ul class="list list-unstyled mb-0">
                                            <p id="date"></p>
                                            <script>
                                                document.getElementById("date").innerHTML = Date();
                                            </script>
                                            </li>
                                            <li style="font-size: 2.5rem;">Topic: <span
                                                    class="font-weight-semibold outPutLbl"></span></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="d-md-flex flex-md-wrap">
                            <div class="mb-4 mb-md-2 text-left"> <span class="text-muted">Chapter:</span>
                                <ul class="list list-unstyled mb-0">
                                    <h3> {{chapter}}</h3>
                                </ul>
                            </div>

                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-lg">
                            <thead>
                                <tr>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        {{description}}
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <h1>Lesson</h1>
                                        {{lesson}}

                                    </td>
                                </tr>


                            </tbody>
                        </table>
                    </div>
                    <div class="card-body">
                        <div class="d-md-flex flex-md-wrap">
                            <div class="pt-2 mb-3 wmin-md-400 ml-auto">

                                <div class="table-responsive">
                                    <table class="table">
                                        <tbody>
                                            <tr>
                                                <th class="text-left">Done:</th>
                                                <th class="text-right"><a href="/home">////</a></th>

                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer"> <span class="text-muted"></span> </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/each}}
<link rel="stylesheet" href="/css/accordion.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.2/html2pdf.bundle.js"></script>
<script src="/js/pdf.js"></script>
<script src="/js/accordion.js"></script>