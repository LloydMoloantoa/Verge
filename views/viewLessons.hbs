<div class="row">
  <div class="col-6">
    <h1>Lessons</h1>
  </div>
  <div class="col-6 d-flex justify-content-end">

     <form class="d-flex" method="POST" action="/addLessonsRoute" novalidate>
      <button class="btn btn-primary align-self-center" type="submit">+ add Lesson</button>
    </form>

    <form class="d-flex" method="POST" action="/classes" novalidate>
      <button class="btn btn-primary align-self-center" type="submit">Back to Classes</button>
    </form>
    <form class="d-flex" method="POST" action="/" novalidate>
      <button class="btn btn-primary align-self-center" type="submit">Logout</button>
    </form>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">lesson Id</th>
      <th scope="col">Chapter</th>
      <th scope="col">Description</th>
      <th scope="col">Class Id</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>

    {{#each rows}}
    <tr>
      <th scope="row">{{this.id_lesson}}</th>
      <td>{{this.chapter}}</td>
      <td>{{this.description}}</td>
      <td>{{this.id}}</td>

      <td class="text-end">
       {{!--  <a href="/edituseru/{{this.id_lesson}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>
          Edit</a> --}}
        <a href="/lessons/{{this.id_lesson}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i>
          Delete</a>
      </td>
    </tr>
    {{/each}}

  </tbody>
</table>

